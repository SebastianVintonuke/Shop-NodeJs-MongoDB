<div class="cart">
    <div class="cart_banner">  
        <div class="container mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col"> </th>
                                    <th scope="col">Product</th>
                                    <th scope="col">Available</th>
                                    <th></th>
                                    <th scope="col" class="text-right">Price</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td><img src="img/{{ image }}" style="width: 50px"/> </td>
                                    <td> {{ name }} </td>
                                    <td class="text-danger"> Not in stock </td>
                                    <td></td>
                                    <td class="text-right"> ${{ price }} </td>
                                    <td class="text-right">
                                        <form action="/cart-{{../user}}?_method=DELETE" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="productId" value="{{_id}}">
                                            <button class="btn btn-sm btn-danger" type="submit"><i class="fa fa-trash"></i> </button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>Sub-Total</td>
                                    <td class="text-right"> ${{ subTotal }} </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>Envio</td>
                                    <td class="text-right"> ${{ shiping }} </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><strong>Total</strong></td>
                                    <td class="text-right"><strong> ${{ total }} </strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col mb-3">
                    <div class="row">
                        <div class="col">
                            <button class="btn btn btn-block btn-success text-uppercase" disabled> Checkout </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>